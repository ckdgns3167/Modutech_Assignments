<header class="twits">
    <div class="row">
        <div class="col-md-8 col-sm-6 col-xs-4">
            <h1 class="site-name mt0 mb0 ml10 w80"><a href="/">SNS</a></h1>
        </div>
        <% if (tagSearchVisualization) { %>
        <div class="col-md-4 col-sm-6 col-xs-8">
            <form action="/post/hashtag" id="hashtag-form">
                <input class="mr5 w200" type="text" name="hashtag" placeholder="태그 검색">
                <button class="btn mr10">검색</button>
            </form>
            <% for(var twit = 0 ; twit < twits.length ; twit++) { %>
            <div class="twit">
                <input type="hidden" value="<%= twit.user.id %>" class="twit-user-id">
                <input type="hidden" value="<%= twit.id %>" class="twit-id">
                <div class="twit-author"><%= twit.user.nick %></div>
                <% const follow = user && user.Followings.map(f => f.id).includes(twit.user.id);%>
                <% if (user && user.id !== twit.user.id && !follow) { %>
                <button class="twit-follow">팔로우 하기</button>
                <% } %>
                <div class="twit-content"><%= twit.content %></div>
                <% if (twit.img) { %>
                <div class="twit-img">
                    <img src="<%= twit.img %>" alt="섬네일">
                </div>
                <% } %>
            </div>
            <% } %>
        </div>
        <% } %>
    </div>
</header>